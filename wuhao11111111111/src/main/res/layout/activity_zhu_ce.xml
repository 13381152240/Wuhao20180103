<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#edb245"></LinearLayout>
    <ImageView
        android:id="@+id/zhuce_fan"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/leftjiantou" />

    <TextView
        android:id="@+id/zhuce_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zhuce_fan"
        android:textColor="#19e7a6"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:text="快速注册" />

    <TextView
        android:id="@+id/zhuce_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/zhuce_fan"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="59dp"
        android:textSize="20dp"
        android:text="账号" />

    <EditText
        android:id="@+id/zhuce_user_shu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zhuce_user"
        android:layout_toEndOf="@+id/zhuce_user"
        android:layout_toRightOf="@+id/zhuce_user"
        android:ems="20"
        android:inputType="textPersonName"
        android:hint="手机号/账号"
        />

    <TextView
        android:id="@+id/zhuce_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zhuce_user"
        android:layout_alignStart="@+id/zhuce_user"
        android:layout_below="@+id/zhuce_user_shu"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="密码" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/zhuce_password"
        android:layout_toEndOf="@+id/zhuce_password"
        android:layout_toRightOf="@+id/zhuce_password"
        android:ems="20"
        android:inputType="textPersonName"
        android:hint="请输入密码" />

    <Button
        android:id="@+id/zhuce_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="注册"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/zhuce_title"
        android:layout_alignEnd="@+id/zhuce_title" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入邮箱"
        android:layout_below="@+id/editText4"
        android:layout_toRightOf="@+id/zhuce_password"
        android:layout_marginTop="18dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱:"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/zhuce_user"
        android:layout_alignStart="@+id/zhuce_user"
        android:layout_alignTop="@+id/editText2" />

</RelativeLayout>
