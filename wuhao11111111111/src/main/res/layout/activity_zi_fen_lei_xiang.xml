<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textColor="#060606"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="TextView"
        android:layout_marginTop="50dp"
        android:textColor="#f20b0b" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="250dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/image_lingdang"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/tv_gong"
            android:layout_alignRight="@+id/tv_gong"
            android:layout_alignTop="@+id/image_dianpu"

            app:srcCompat="@mipmap/lianxi" />

        <TextView
            android:id="@+id/tv_gong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="47dp"
            android:textSize="10dp"
            android:text="供应" />

        <ImageView
            android:id="@+id/image_dianpu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/tv_dianpu"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:layout_toEndOf="@+id/image_lingdang"
            android:layout_toRightOf="@+id/image_lingdang"
            app:srcCompat="@mipmap/dianpu" />

        <TextView
            android:id="@+id/tv_dianpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_dianpu"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/image_dianpu"
            android:textSize="10dp"
            android:text="店铺" />

        <ImageView
            android:id="@+id/image_guanzhu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/image_lingdang"
            android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@+id/image_dianpu"
            android:layout_toRightOf="@+id/image_dianpu"
            app:srcCompat="@mipmap/normalheart" />

        <TextView
            android:id="@+id/tv_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_guanzhu"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/image_guanzhu"
            android:textSize="10dp"
            android:text="关注" />

        <ImageView
            android:id="@+id/image_gouwuche"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_above="@+id/tv_gouwuche"
            android:layout_alignTop="@+id/image_dianpu"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_toEndOf="@+id/image_guanzhu"
            android:layout_toRightOf="@+id/image_guanzhu"
            app:srcCompat="@mipmap/shopcar"
            android:onClick="tiao"
            />

        <TextView
            android:id="@+id/tv_gouwuche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_gouwuche"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/image_gouwuche"
            android:textSize="10dp"
            android:text="购物车" />

        <Button
            android:id="@+id/tv_jiaru"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#f70a0a"
            android:textColor="#faf2f2"
            android:text="加入购物车" />
    </RelativeLayout>
    </LinearLayout>
</ScrollView>
